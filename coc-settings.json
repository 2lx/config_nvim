{
    "diagnostic.checkCurrentLine": true,
    "languageserver": {
        "coc-clangd": {
            "enabled": true,
            "command": "clangd",
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/clangd"
                }
            },
            "filetypes": [
                "h",
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ]
        },
        "lua": {
            "command": "lua-language-server",
            "filetypes": [
                "lua"
            ],
            "rootPatterns": [
                ".git/"
            ],
            "settings": {
                "Lua": {
                    "diagnostics": {
                        "disable": [
                            "lowercase-global",
                            "newfield-call"
                        ],
                        "enable": true,
                        "globals": [
                            "clib",
                            "jana"
                        ]
                    },
                    "runtime": {
                        "version": "Lua 5.4"
                    },
                    "workspace": {
                        "checkThirdParty": false,
                        "maxPreload": 2000,
                        "preloadFileSize": 1000
                    }
                }
            }
        }
    }
}
